<Page x:Class="TRY1wpf.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRY1wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Название"/>
            <TextBlock Text="Цена"/>
            <TextBlock Text="Количество"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="PName"/>
            <TextBox x:Name="PPrice"/>
            <TextBox x:Name="PCount"/>
        </StackPanel>
        <Button Grid.ColumnSpan="2" Height="30" Width="175" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Назад" Click="Back_Button"/>
        <Button Grid.ColumnSpan="2" Height="30" Width="175" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Добавить" Click="Add_Button"/>
    </Grid>
</Page>
